  <script>
    const overlay = document.getElementById('overlay');
const revealBtn = document.getElementById('revealBtn');
const closeModal = document.getElementById('closeModal');
const modalText = document.getElementById('modalText');

// mensagens em ordem
const mensagens = [
  "VocÃª ganhou o chinelo Havaianas que tanto queria (estÃ¡ chegando!) ğŸ©´ğŸ’™",
  "Vamos passar um dia em Lajeado ğŸŒ¤ï¸âœ¨",
  "VocÃª ganhou direito a 1 massagem nos pÃ©s ğŸ‘£ğŸ’—",
  "NÃ³s vamos ao Planeta AtlÃ¢ntida 2026 ğŸ¤ğŸ‰ para curtir, comemorar e realizar seu sonho.<br>Te amo! â¤ï¸â€ğŸ”¥"
];

let indice = 0; // comeÃ§a na primeira mensagem

revealBtn.addEventListener('click', () => {
  modalText.style.opacity = 0;
  setTimeout(() => {
    modalText.innerHTML = mensagens[indice];
  overlay.classList.add('show');
  setTimeout(() => { modalText.style.opacity = 1; }, 50);('show');
  overlay.setAttribute('aria-hidden','false');

  // avanÃ§a para a prÃ³xima
  indice = (indice + 1) % mensagens.length;
});

closeModal.addEventListener('click', () => {
  overlay.classList.remove('show');
  overlay.setAttribute('aria-hidden','true');
});

overlay.addEventListener('click', (e) => {
  if (e.target === overlay) {
    overlay.classList.remove('show');
    overlay.setAttribute('aria-hidden','true');
  }
});
